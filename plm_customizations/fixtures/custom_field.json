  {
    "doctype": "Custom Field",
    "name": "BOM-current_version",
    "dt": "BOM",
    "fieldname": "current_version",
    "label": "Current Version",
    "fieldtype": "Int",
    "insert_after": "plm_version_section",
    "default": "0",
    "read_only": 1,
    "bold": 1,
    "in_list_view": 1,
    "in_standard_filter": 1
  },
  {
    "doctype": "Custom Field",
