    "insert_after": "column_break_plm",
    "read_only": 1
  },
  {
    "doctype": "Custom Field",
    "name": "BOM-bom_published_by",
    "dt": "BOM",
    "fieldname": "bom_published_by",
    "label": "Published By",
    "fieldtype": "Link",
    "options": "User",
    "insert_after": "bom_published_date",
    "read_only": 1
