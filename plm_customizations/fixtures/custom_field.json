    "options": "ECN",
    "insert_after": "published_by",
    "read_only": 1,
    "in_list_view": 1,
    "in_standard_filter": 1
  },
  {
    "doctype": "Custom Field",
    "name": "BOM-plm_version_section",
    "dt": "BOM",
    "fieldname": "plm_version_section",
    "label": "Version Control",
