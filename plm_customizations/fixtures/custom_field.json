    "fieldname": "plm_status",
    "label": "PLM Status",
    "fieldtype": "Select",
    "options": "Draft\nPublished\nBlocked",
    "insert_after": "current_version",
    "default": "Draft",
    "read_only": 1,
    "in_list_view": 1,
    "in_standard_filter": 1
  },
  {
    "doctype": "Custom Field",
    "name": "BOM-current_ecn",
    "dt": "BOM",
    "fieldname": "current_ecn",
    "label": "Current ECN",
    "fieldtype": "Link",
    "options": "ECN",
    "insert_after": "plm_status",
    "read_only": 1,
    "in_list_view": 1,
    "in_standard_filter": 1
  },
  {
    "doctype": "Custom Field",
    "name": "BOM-column_break_plm",
    "dt": "BOM",
    "fieldname": "column_break_plm",
    "fieldtype": "Column Break",
    "insert_after": "current_ecn"
