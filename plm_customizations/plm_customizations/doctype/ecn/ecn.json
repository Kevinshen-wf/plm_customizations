      "create": 1,
      "delete": 1
    },
    {
      "role": "Item Manager",
      "read": 1,
      "write": 1,
      "create": 1
    },
    {
      "role": "Mechanical Engineer",
      "read": 1,
      "write": 1,
      "create": 1
    },
    {
      "role": "Manufacturing Manager",
      "read": 1,
      "write": 1,
      "create": 1
    }
  ],
  "track_changes": 1,
  "engine": "InnoDB"
