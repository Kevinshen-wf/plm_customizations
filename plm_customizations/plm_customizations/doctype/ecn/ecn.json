    {
      "fieldname": "column_break_1",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "author",
      "label": "Author",
      "fieldtype": "Link",
      "options": "User",
      "read_only": 1,
      "in_list_view": 1,
      "bold": 1
    },
    {
      "fieldname": "creation_date",
      "label": "Creation Date",
      "fieldtype": "Datetime",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "section_break_details",
      "label": "Change Details",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "change_reason",
      "label": "Change Reason",
      "fieldtype": "Text",
      "reqd": 1,
      "description": "Describe the reason for this engineering change"
